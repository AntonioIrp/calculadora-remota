<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="52dp"
        android:layout_y="146dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="125dp"
        android:layout_y="243dp"
        android:onClick="OnCalcularMultiplicacion"
        android:text="@string/calcularmulti" />

    <TextView
        android:id="@+id/userP"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_x="123dp"
        android:layout_y="96dp"
        android:text="@string/userP" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="123dp"
        android:layout_y="208dp"
        android:text="TextView" />

</AbsoluteLayout>